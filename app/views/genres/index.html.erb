<h1>Liste des genres de manga</h1>

<table>
	<thead>
		
		<th>Nom du genre</th>
		<th>age ciblé</th>
		<th>description</th>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				
				<td><%= genre.name%></td>
				<td><%= genre.age %></td>
				<td><%= genre.description %></td>
				<td><%= link_to 'Afficher', genre %></td>
				<td><%= link_to 'Supprimer', genre, method: :delete, data: {confirm: 'Etes-vous sûr ?'} %></td>
				<td><%= link_to 'Editer', edit_genre_path(genre)%></td>
			</tr>
		<% end %>
	</tbody>
</table>

<p>
	<%= link_to 'Ajouter un genre' , new_genre_path%>
</p>