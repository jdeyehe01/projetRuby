<h1>Votre espace </h1>
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>.


  <%= link_to 'Editer mon profil', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Se deconnecter", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>


<table class="table table-hover">
	<thead>
		<th>Vos mangas préférés</th>

		
	</thead>


	<tbody>
		
		<% @espaces.each do |espace| %>
		<% @manga = espaces.manga_id   %>
		<%= manga.title %>
		
	</tbody>
</table>


<% else %>
  <%= link_to "S'enregister", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "S'identifier", new_user_session_path, :class => 'navbar-link'  %>
<% end %>