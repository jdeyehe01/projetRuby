<!DOCTYPE html>
<html>
  <head>
    <title>Manga</title>

  	<!-- Latest compiled and minified CSS -->
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <nav class="navbar navbar-default" style="background-image: linear-gradient(#c1e2ff, #72b1e6);">
      <div class="container">
        <div class="navbar" style="text-align: center;">

          <div class="col-sm-4">
            <%= link_to '<button type="button" class="btn btn-primary" style="margin-top: 20px;">
            <strong>Les mangas</strong></button>'.html_safe, mangas_path %>
          </div>

          <div class="col-sm-4" >
            <%= link_to '<button type="button" class="btn btn-primary" style="margin-top: 20px;">
            <strong>Les genres</strong></button>'.html_safe, genres_path %>
          </div>

          <div class="col-sm-4">
            <%= link_to '<button type="button" class="btn btn-primary" style="margin-top: 20px;">
            <strong>Les auteurs</strong></button>'.html_safe, auteurs_path %>
          </div>
          
        </div>
      </div>
    </nav>

  	<div class="container">
		  <div class="row">

        <% if user_signed_in? %>
          <p class="navbar-text pull-right" style="text-align:center;">
            ConnectÃ© en tant que : <strong><%= current_user.email %></strong> <br>
            <%= link_to 'Editer le profil', edit_user_registration_path, :class => 'navbar-link' %> |
            <%= link_to "Se deconnecter", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
          </p>
        <% else %>
          <p class="navbar-text pull-right">
            <%= link_to "S'enregistrer", new_user_registration_path, :class => 'navbar-link'  %> |
            <%= link_to "S'identifier", new_user_session_path, :class => 'navbar-link'  %>
          </p>
        <% end %>

        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>

  			<div><%= flash[:info] %></div>
  		  <%= yield %>
    	
      </div>
    </div>

  </body>

</html>

