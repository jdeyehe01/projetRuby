<h1>Liste des mangas</h1>

<hr>
<tbody>
		
<% @mangas.each do |manga| %>
	<%@genre = Genre.find(manga.genre_id) %>
	<%@image = Image.find(manga.image_id) %>
	<%@auteur = Auteur.find(manga.auteur_id) %>

			
	<div class="col-sm-4">
			
		<%= image_tag @image.url, alt: @image.name , style:"width: 26%; vertical-align: baseline;" %> 
		<p style="display:inline-block;">
			<%= manga.title %> <br>
			<%= manga.title_traduction %> <br> 
			Sortie le : <%= manga.realise_date %> <br>
			Volumes : <%= manga.tome_number %> tomes <br>
			Genre : <%= link_to @genre.name , @genre %> <br>
			Ecrit par : <%= link_to @auteur.last_name , @auteur %> <br>
			<%= link_to 'Afficher', manga %> 
			<% if user_signed_in? %>
				| <%= link_to 'Supprimer', manga, method: :delete, data: {confirm: 'Etes-vous sûr ?'} %>
			<% end %>
		</p>

		<%= form_tag "/spaces/#{manga.id}", method: "patch" do %>
		<input type="submit" class="btn btn-primary" value="Ajouter à mes favoris" style="font-weight:bold;" />
 
		<% end %>

	</div>

	<% end %>
</tbody>
