<h1>Liste des mangas</h1>

<table>
	<thead>
		<th>title</th>
		<th>title traduction</th>
		<th>realise date</th>
		<th>tome number</th>
	</thead>
	<tbody>
		<% @mangas.each do |manga| %>
			<tr>
				<td><%= manga.title%></td>
				<td><%= manga.title_traduction %></td>
				<td><%= manga.realise_date %></td>
				<td><%= manga.tome_number %> PV</td>
				<td><%= link_to 'Show', manga %></td>
				<td><%= link_to 'Supprimer', manga, method: :delete, data: {confirm: 'Etes-vous sÃ»r ?'} %></td>
			</tr>
		<% end %>
	</tbody>
</table>